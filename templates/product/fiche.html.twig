{% extends 'base.html.twig' %}

{% block title %}Produit -
	{{ produit.nom }}
{% endblock %}

{% block body %}
<body style="background-color:#DAEDF8;">
	<div class="col-6 mx-auto d-flex justify-content-between mt-5">
		<div class="col-6">
			<img src="{{ asset('uploads/produit/' ~ produit.image) }}" class="col-12"/>
		</div>
		<div class="col-4">
			<div class="card">
				<h1>{{ produit.nom }}</h1>
				<p>{{ produit.description }}</p>
				{# <p>{{ produit.stock }}</p> #}
			</div>
			<h2 class="mt-3">Les avis :</h2>
			{% for commentaire in produit.commentaires %}
				<div class="card my-3">
					<h2>{{ commentaire.titre }}</h2>
					<p>{{ commentaire.contenu }}</p>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="mt-5 col-10 mx-auto">
	<h6>RÃ©diger un commentaire:<h6>
	<br/>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button class="btn btn-primary">{{ button_label|default('Poster votre commentaire') }}</button>
		{{ form_end(form) }}
	</div>
	</body>


{% endblock %}
