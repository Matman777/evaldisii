{% extends 'base.html.twig' %}

{% block title %}Commentaires
{% endblock %}

{% block body %}
<body style="background-color:#DAEDF8;">
	<h1>Commentaires</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Contenu</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commentaire in commentaires %}
				<tr>
					<td>{{ commentaire.id }}</td>
					<td>{{ commentaire.titre }}</td>
					<td>{{ commentaire.contenu }}</td>
					<td>
						<a href="{{ path('app_admin_commentaire_show', {'id': commentaire.id}) }}">Voir</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	</body>
{% endblock %}
